{
  "name": "bangbow-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "PORT=4300 NEXT_PUBLIC_VERSION=$npm_package_version next dev",
    "build": "NEXT_PUBLIC_VERSION=$npm_package_version next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "format": "prettier --write --ignore-unknown '**/*.{js,jsx,ts,tsx,css,md,json}'",
    "codegen:schema": "graphql-codegen --config codegen-schema.yml",
    "codegen:operations": "graphql-codegen --config codegen.yml",
    "codegen:all": "yarn codegen:schema && yarn codegen:operations"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@apollo/client": "^3.6.9",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@next/bundle-analyzer": "^12.1.6",
    "@reduxjs/toolkit": "^1.8.5",
    "antd": "^4.21.0",
    "dayjs": "^1.11.3",
    "dynamic-antd-theme": "^0.8.7",
    "graphql": "^16.6.0",
    "lodash": "^4.17.21",
    "next": "12.1.6",
    "next-compose-plugins": "^2.2.1",
    "next-plugin-antd-less": "^1.8.0",
    "next-seo": "^5.4.0",
    "next-sitemap": "^3.0.5",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-otp-input": "^2.4.0",
    "react-redux": "^8.0.2",
    "react-use": "^17.4.0",
    "redux": "^4.2.0",
    "sharp": "^0.30.6",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.12.0",
    "@graphql-codegen/introspection": "^2.2.1",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@graphql-codegen/typescript-react-apollo": "^3.3.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "17.0.42",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "@types/validator": "^13.7.3",
    "babel-plugin-import": "^1.13.5",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "2.6.2",
    "typescript": "4.7.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "lint-staged": {
    "**/*": "yarn format"
  }
}
