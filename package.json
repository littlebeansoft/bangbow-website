{
  "name": "bangbow-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "PORT=4300 NEXT_PUBLIC_VERSION=$npm_package_version next dev",
    "build": "NEXT_PUBLIC_VERSION=$npm_package_version next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "format": "prettier --write --ignore-unknown '**/*.{js,jsx,ts,tsx,css,md,json}'"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@next/bundle-analyzer": "^12.1.6",
    "antd": "^4.21.0",
    "dayjs": "^1.11.3",
    "dynamic-antd-theme": "^0.8.7",
    "next": "12.1.6",
    "next-compose-plugins": "^2.2.1",
    "next-plugin-antd-less": "^1.8.0",
    "next-seo": "^5.4.0",
    "next-sitemap": "^3.0.5",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "sharp": "^0.30.6"
  },
  "devDependencies": {
    "@types/node": "17.0.42",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "babel-plugin-import": "^1.13.5",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "2.6.2",
    "typescript": "4.7.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "lint-staged": {
    "**/*": "yarn format"
  }
}
